<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="202508271547" author="bquirke">
        <createTable tableName="contact">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="uuid" type="VARCHAR"/>
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="mobile_number" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="202508271548" author="bquirke">
        <addUniqueConstraint 
            tableName="contact" 
            columnNames="first_name,last_name,mobile_number" 
            constraintName="uk_contact_first_last_mobile"/>
    </changeSet>

    <changeSet id="202508271606" author="bquirke">
        <createTable tableName="addressbook">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="uuid" type="VARCHAR"/>
            <column name ="name" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="202508271610" author="bquirke">
        <createTable tableName="contact_addressbook">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                 <constraints primaryKey="true"/>
            </column>
            <column name="contact_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="addressbook_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint 
            baseTableName="contact_addressbook"
            baseColumnNames="contact_id"
            referencedTableName="contact"
            referencedColumnNames="id"
            constraintName="fk_contact_addressbook_contact"/>
        <addForeignKeyConstraint 
            baseTableName="contact_addressbook"
            baseColumnNames="addressbook_id"
            referencedTableName="addressbook"
            referencedColumnNames="id"
            constraintName="fk_contact_addressbook_addressbook"/>
    </changeSet>

    <changeSet id="202509081455" author="bquirke">
        <addUniqueConstraint 
            tableName="addressbook" 
            columnNames="name" 
            constraintName="uk_addressbook_name"/>
    </changeSet>

</databaseChangeLog>